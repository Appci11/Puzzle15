<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:padding="10dp"
    android:background="?attr/backgroundColor">


    <!-- Pakeist height'a, kai bus content'as -->

    <Button
        android:id="@+id/btnGameGuideToMenu"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="@string/MainMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGameGuideToAboutPuzzle"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/AboutPuzzle15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGameGuideToAccount" />

    <Button
        android:id="@+id/btnGameGuideToRandomGame"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:text="@string/RandomGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGameGuideToCustomGame"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/CustomGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGameGuideToRandomGame" />

    <Button
        android:id="@+id/btnGameGuideToAccount"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGameGuideToCustomGame" />

</androidx.constraintlayout.widget.ConstraintLayout>




