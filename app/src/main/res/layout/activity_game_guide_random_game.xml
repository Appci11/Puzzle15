<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:padding="10dp"
    tools:context=".AccountActivity">


    <!-- Pakeist height'a, kai bus content'as -->


    <!-- Place game guide content here -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtGGRG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Game"
                android:textColor="@color/black"
                android:textSize="70px" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Game option gives you randomly generated Puzzle 15 game"
                android:textColor="@color/black"
                android:textSize="50px" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                app:srcCompat="@mipmap/random_game" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="After wining game Wining Screen pops up with infomation such as : How much time taken , moves taken and Score"
                android:textColor="@color/black"
                android:textSize="50px" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnToGameGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="GameGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>




