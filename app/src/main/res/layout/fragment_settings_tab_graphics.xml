<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtCardBackground"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/CardBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtColorTheme" />

        <Spinner
            android:id="@+id/spnCardBackground"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:entries="@array/cardBackground"
            app:layout_constraintBottom_toBottomOf="@+id/txtCardBackground"
            app:layout_constraintStart_toEndOf="@+id/txtCardBackground"
            app:layout_constraintTop_toTopOf="@+id/txtCardBackground" />

        <TextView
            android:id="@+id/txtColorTheme"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ColorTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spnColorTheme"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:entries="@array/colorTheme"
            app:layout_constraintBottom_toBottomOf="@+id/txtColorTheme"
            app:layout_constraintStart_toEndOf="@+id/txtColorTheme"
            app:layout_constraintTop_toTopOf="@+id/txtColorTheme" />

        <TextView
            android:id="@+id/txtChosePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Chose picture from library"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCardBackground" />

        <Button
            android:id="@+id/btnSettingsChosePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChosePicture"
            android:text="Chose"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>