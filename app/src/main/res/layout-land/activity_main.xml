<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:background="?attr/backgroundColor">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRandomGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:width="200dp"
        android:text="@string/random_game"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <Button
        android:id="@+id/btnCustomGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:width="200dp"
        android:text="@string/custom_game"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnRandomGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRandomGame" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:width="200dp"
        android:text="@string/settings"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnAccount"
        app:layout_constraintStart_toEndOf="@+id/btnAccount"
        app:layout_constraintTop_toTopOf="@+id/btnAccount" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:width="200dp"
        android:text="@string/about"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnSettings"
        app:layout_constraintStart_toEndOf="@+id/btnSettings"
        app:layout_constraintTop_toTopOf="@+id/btnSettings" />

    <Button
        android:id="@+id/btnHighScoreView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:text="@string/highscores"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnCustomGame"
        app:layout_constraintStart_toEndOf="@+id/btnCustomGame"
        app:layout_constraintTop_toTopOf="@+id/btnCustomGame" />

    <Button
        android:id="@+id/btnGameGuide"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:text="Game Guide"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnRandomGame"
        app:layout_constraintStart_toEndOf="@+id/btnRandomGame"
        app:layout_constraintTop_toTopOf="@+id/btnRandomGame" />

    <Button
        android:id="@+id/btnAccount"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Account"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnCustomGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCustomGame" />
    <Button
        android:id="@+id/btnToTest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtLoginName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/logged_out"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnToTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Test2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btnToTest1"
        app:layout_constraintEnd_toStartOf="@+id/btnToTest1"
        app:layout_constraintTop_toTopOf="@+id/btnToTest1" />
</androidx.constraintlayout.widget.ConstraintLayout>